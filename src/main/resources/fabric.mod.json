{
    "schemaVersion": 1,
    "id": "${mod_id}",
    "version": "${mod_version}",

    "name": "${mod_name}",
    "description": "Stormfest is a mod that adds an **Enchanted Music Disc** dropped from Charged Creepers when killed by stray Skeleton arrows.\nUpon playing said disc; a thunderstorm will begin, using up the disc's mystical powers.",
    "authors": [
        "Sydist: Programming",
        "MisterKaze: Concept & Music",
        "Hitsuu: Design & Art"
    ],
    "contact": {
        "homepage": "https://discord.gg/ySCQH4PPmC",
        "sources": "https://github.com/Sydist/stormfest"
    },

    "license": "MIT",
    "icon": "assets/${mod_id}/icon.png",

    "environment": "*",
    "entrypoints": {
        "main": [
            "${maven_group}.Main"
        ]
    },
    "mixins": [],
    "accessWidener": "${mod_id}.accesswidener",
    "depends": {
        "fabricloader": ">=0.14.9",
        "minecraft": "~1.19",
        "java": ">=17"
    }
}
